<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SendNotificationsFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="Select Participants to Send Notifications"
        android:layout_gravity="center"
        android:textSize="16sp"
        android:textStyle="bold" />

    <CheckBox
        android:id="@+id/check_waitlist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Waitlisted Participants" />

    <CheckBox
        android:id="@+id/check_invited"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Invited Participants" />
    <CheckBox
        android:id="@+id/check_accepted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Accepted Participants" />

    <CheckBox
        android:id="@+id/check_cancelled"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Cancelled Participants" />


</LinearLayout>